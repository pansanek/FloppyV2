<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/darkest"
    android:layout_height="match_parent"
    tools:context=".LoginIn"
    android:id="@+id/root_el">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="727dp"
        android:layout_height="1007dp"
        android:layout_marginBottom="80dp"
        android:adjustViewBounds="true"
        android:foregroundGravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/floppa" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:shadowColor="@color/darkest"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/name"
        android:textColor="@color/dark"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:shadowColor="@color/darkest"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/desc"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/dark"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Войти"
        android:textColor="@color/darkest"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="232dp"
        android:layout_height="65dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="564dp"
        android:backgroundTint="@color/dark"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Зарегистроваться"
        android:textColor="@color/darkest"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="231dp"
        android:layout_height="38dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:shadowColor="@color/darkest"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Войдите в свою учетную запись"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

</androidx.constraintlayout.widget.ConstraintLayout>
